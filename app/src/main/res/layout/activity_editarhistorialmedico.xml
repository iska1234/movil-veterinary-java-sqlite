<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Editarhistorialmedico">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="193dp"
                android:backgroundTint="#8881F6"
                app:cardCornerRadius="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="135dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@mipmap/perroblanco" />

                <TextView
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/baloo_bhaina"
                    android:text="Editemos el"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="75dp"
                    android:fontFamily="@font/baloo_bhaina"
                    android:text="HISTORIAL MÃ‰DICO"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="24sp"></TextView>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="340dp"
                android:layout_height="532dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#FFFF"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.483"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cardView2"
                app:layout_constraintVertical_bias="0.686">


                <LinearLayout
                    android:layout_width="314dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEnfermedadUpdate"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/advent_pro_medium"
                        app:startIconDrawable="@mipmap/pencil">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edteditarenfermedadpadecida"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/advent_pro_medium"
                            android:hint="Ingrese enfermedad"
                            android:inputType="textPersonName"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilTratamientoUpdate"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/advent_pro_medium"
                        app:startIconDrawable="@mipmap/tratamiento">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edteditartratamiento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/advent_pro_medium"
                            android:hint="Ingrese Tratamiento"
                            android:inputType="textPersonName"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilFechaUpdate"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/advent_pro_medium"
                        app:startIconDrawable="@mipmap/calendar">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edteditarfechahistorial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/advent_pro_medium"
                            android:hint="Ingrese la fecha"
                            android:inputType="textPersonName"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/advent_pro_medium"
                        android:text="Seleccione Medicamento Utilizado :"
                        android:textColor="#8881F6"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinnereditaridmedicacion"
                        android:layout_width="248dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/advent_pro_medium"
                        android:textSize="14sp"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/advent_pro_medium"
                        android:text="Seleccione Mascota :"
                        android:textColor="#8881F6"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinnereditaridmascotas"
                        android:layout_width="248dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/advent_pro_medium"
                        android:textSize="14sp"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/btnguardareditarhistorial"
                        android:layout_width="261dp"
                        android:layout_height="58dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#8881F6"
                        android:text="ACTUALIZAR"
                        android:textSize="12sp"
                        app:cornerRadius="20dp" />

                    <Button
                        android:id="@+id/btnregresarhistorial"
                        android:layout_width="262dp"
                        android:layout_height="59dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="#8881F6"
                        android:text="LISTADO"
                        android:textSize="12sp"
                        app:cornerRadius="20dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            app:menu_colorNormal="#8881F6"
            android:layout_alignParentBottom="true">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabregresalistahistorial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|end"
                android:clickable="true"
                android:fontFamily="@font/advent_pro_medium"
                android:src="@mipmap/list"
                app:fab_colorNormal="#8881F6"
                app:fab_colorPressed="#8881F6" />
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabeliminarhistorialmedi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|end"
                android:clickable="true"
                android:fontFamily="@font/advent_pro_medium"
                android:src="@mipmap/eliminar"
                app:fab_colorNormal="#8881F6"
                app:fab_colorPressed="#8881F6" />

        </com.github.clans.fab.FloatingActionMenu>

    </RelativeLayout>

</LinearLayout>