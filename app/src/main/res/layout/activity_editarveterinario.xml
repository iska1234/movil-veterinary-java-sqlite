<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarveterinarioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="427dp"
            android:layout_height="197dp"
            android:backgroundTint="#8881F6"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="130dp"
                android:layout_height="143dp"
                android:layout_marginLeft="50dp"
                app:srcCompat="@mipmap/perroblanco" />

            <TextView
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/baloo_bhaina"
                android:text="Actualicemos al"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="18sp"></TextView>
            <TextView
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/baloo_bhaina"
                android:text="VETERINARIO"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="24sp"></TextView>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="110dp"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="341dp"
            android:layout_height="564dp"
            android:layout_margin="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#FFFF"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView2"
            app:layout_constraintVertical_bias="0.652">

            <ScrollView
                android:layout_width="335dp"
                android:layout_height="547dp">

                <LinearLayout
                    android:layout_width="341dp"
                    android:layout_height="583dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilNomVetUpdate"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/advent_pro_medium"
                        app:startIconDrawable="@mipmap/user">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edteditarnombreveterinario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/advent_pro_medium"
                            android:hint="Nombres"
                            android:inputType="textPersonName"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilApeVetUpdate"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/advent_pro_medium"
                        app:startIconDrawable="@mipmap/user">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edteditarapellidoveterinario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/advent_pro_medium"
                            android:hint="Apellidos"
                            android:inputType="textPersonName"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilDniVetUpdate"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="128dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/advent_pro_medium"
                            app:startIconDrawable="@mipmap/pencil">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edteditardniveterinario"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/advent_pro_medium"
                                android:hint="Dni"
                                android:inputType="number"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilCelVetUpdate"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="161dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/advent_pro_medium"
                            app:startIconDrawable="@mipmap/telefono">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edteditarcelularveterinario"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/advent_pro_medium"
                                android:hint="Celular"
                                android:inputType="phone"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilDireVetUpdate"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/advent_pro_medium"
                        app:startIconDrawable="@mipmap/marker">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edteditardireccionveterinario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/advent_pro_medium"
                            android:hint="Dirección"
                            android:inputType="textPersonName"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/advent_pro_medium"
                        android:text="Sexo :"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbfemeninoVetUpdate"
                            android:layout_width="51dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/advent_pro_medium"
                            android:text="Femenino"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/rbmasculinoVetUpdate"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/advent_pro_medium"
                            android:text="Masculino"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCorreoVetUpdate"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/advent_pro_medium"
                        app:startIconDrawable="@mipmap/correo">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edteditarcorreoveterinario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/advent_pro_medium"
                            android:hint="Correo electrónico"
                            android:inputType="textEmailAddress"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/advent_pro_medium"
                        android:text="Seleccione Especialidad :"
                        android:textColor="#8881F6"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinnereditaridespecialidades"
                        android:layout_width="248dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/advent_pro_medium"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnguardareditarveterinario"
                        android:layout_width="291dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#8881F6"
                        android:text="ACTUALIZAR"
                        android:textSize="12sp"
                        app:cornerRadius="20dp" />

                    <Button
                        android:id="@+id/btnregresarlistaveterinarios"
                        android:layout_width="291dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="#8881F6"
                        android:text="LISTAR"
                        android:textSize="12sp"
                        app:cornerRadius="20dp" />

                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        app:menu_colorNormal="#8881F6"
        android:layout_alignParentBottom="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabregresalistaVeterinarios"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:clickable="true"
            android:fontFamily="@font/advent_pro_medium"
            android:src="@mipmap/list"
            app:fab_colorNormal="#8881F6"
            app:fab_colorPressed="#8881F6" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabeliminareditarveterinario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:clickable="true"
            android:fontFamily="@font/advent_pro_medium"
            android:src="@mipmap/eliminar"
            app:fab_colorNormal="#8881F6"
            app:fab_colorPressed="#8881F6" />

    </com.github.clans.fab.FloatingActionMenu>

</androidx.constraintlayout.widget.ConstraintLayout>