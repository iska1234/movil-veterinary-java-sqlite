<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#FFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="299dp"
            android:layout_height="548dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/edtnombremascotaE"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="0sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/costum_edt"
                android:drawableLeft="@mipmap/pawmorado"
                android:drawablePadding="15dp"
                android:ems="10"
                android:fontFamily="@font/advent_pro_medium"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/edtpesomascotaE"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10sp"
                android:background="@drawable/costum_edt"
                android:drawableLeft="@mipmap/peso"
                android:drawablePadding="15dp"
                android:ems="10"
                android:fontFamily="@font/advent_pro_medium"
                android:hint="Peso"
                android:inputType="numberDecimal"
                android:padding="15dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtrazamascotaE"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/costum_edt"
                android:drawableLeft="@mipmap/pawmorado"
                android:drawablePadding="15dp"
                android:ems="10"
                android:fontFamily="@font/advent_pro_medium"
                android:hint="Raza"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtespeciemascotaE"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/costum_edt"
                android:drawableLeft="@mipmap/pawmorado"
                android:drawablePadding="15dp"
                android:ems="10"
                android:fontFamily="@font/advent_pro_medium"
                android:hint="Especie"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtedadmascotaE"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10sp"
                android:background="@drawable/costum_edt"
                android:drawableLeft="@mipmap/pencil"
                android:drawablePadding="15dp"
                android:ems="10"
                android:fontFamily="@font/advent_pro_medium"
                android:hint="Edad"
                android:inputType="number"
                android:padding="15dp"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/textView18"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/advent_pro_medium"
                android:text="Sexo :"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/rbhembraE"
                    android:layout_width="109dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/advent_pro_medium"
                    android:text="Hembra"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rbmachoE"
                    android:layout_width="166dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/advent_pro_medium"
                    android:text="Macho"
                    android:textSize="16sp" />

            </RadioGroup>

            <Button
                android:id="@+id/btnActualizar"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40sp"
                android:backgroundTint="#8881F6"
                android:text="ACTUALIZAR"
                android:textSize="12sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/outlinedEliminar"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Eliminar"
                android:textColor="#8881F6" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>