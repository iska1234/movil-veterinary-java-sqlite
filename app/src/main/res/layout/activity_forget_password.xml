<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ForgetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="336dp"
            android:layout_height="597dp"
            android:layout_margin="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="121dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#FFFF"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView2"
            app:layout_constraintVertical_bias="0.962">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="643dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">

                <EditText
                    android:id="@+id/edtOlvidarCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/costum_edt"
                    android:drawableLeft="@mipmap/correo"
                    android:drawablePadding="15dp"
                    android:ems="10"
                    android:fontFamily="@font/advent_pro_medium"
                    android:hint="Correo electrónico"
                    android:inputType="textEmailAddress"
                    android:padding="15dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtOlvidarpassw"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/costum_edt"
                    android:drawableLeft="@mipmap/contra"
                    android:drawablePadding="15dp"
                    android:ems="10"
                    android:fontFamily="@font/advent_pro_medium"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edtOlvidarconfpassw"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/costum_edt"
                    android:drawableLeft="@mipmap/contra"
                    android:drawablePadding="15dp"
                    android:ems="10"
                    android:fontFamily="@font/advent_pro_medium"
                    android:hint="Confirmar contraseña"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnForgetPassw"
                    android:layout_width="281dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40sp"
                    android:backgroundTint="#8881F6"
                    android:text="GUARDAR"
                    android:textSize="14sp"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnRegresarForget"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="229dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="40sp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10sp"
                    android:text="REGRESAR"
                    android:textColor="#8881F6"
                    android:textSize="14sp"
                    app:cornerRadius="20dp"
                    app:strokeColor="#FFF" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>