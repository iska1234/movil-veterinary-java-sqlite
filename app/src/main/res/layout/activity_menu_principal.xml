<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:orientation="vertical"
    tools:context=".MenuPrincipalActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/baloo_bhaina"
            android:text="Hola Cristiano Ronaldo,"
            android:textColor="#C1090707"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/text_me_one"
            android:text="Cuidemos a nuestras mascotas"
            android:textColor="#C1090707"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNombreUsuario"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnMascotas"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="21dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:backgroundTint="#8881F6"
                android:drawableRight="@mipmap/paw"
                app:cornerRadius="15dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btnCitas"
                android:layout_width="1dp"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="21dp"
                android:layout_weight="1"
                android:backgroundTint="#F9AE7D"
                android:drawableRight="@mipmap/calendar"
                app:cornerRadius="15dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="21dp"
                android:layout_weight="1"
                android:backgroundTint="#FCB4AF"
                android:drawableRight="@mipmap/info"
                app:cornerRadius="15dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btnUbicacion"
                android:layout_width="3dp"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#FFDA8C"
                android:drawableRight="@mipmap/ubicacion"
                app:cornerRadius="15dp"
                tools:ignore="SpeakableTextPresentCheck">

            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="165dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/quicksand_medium"
                android:text="Mascotas"
                android:textAlignment="center"
                android:textColor="#C1090707"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/quicksand_medium"
                android:text="Citas"
                android:textAlignment="center"
                android:textColor="#C1090707"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/quicksand_medium"
                android:text="Información"
                android:textAlignment="center"
                android:textColor="#C1090707"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/quicksand_medium"
                android:text="Ubicación"
                android:textAlignment="center"
                android:textColor="#C1090707"
                android:textSize="12sp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginTop="210dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#8881F6"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/perroblanco" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/viga"
                android:text="Chequeo Médico"
                android:textColor="#FDFFFFFF" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/viga"
                android:text="11:00  AM   Noviembre 22 "
                android:textColor="#FFFFFF" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="242dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/viga"
                android:text="Mis Mascotas"
                android:textColor="#C1090707"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/ivAgregarMascota"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/agregar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="365dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="173dp"
                android:layout_height="225dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:id="@+id/cvMascota"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivMascota"
                        android:layout_width="match_parent"
                        android:layout_height="142dp"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@mipmap/gato" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/viga"
                        android:text="Musulina"
                        android:textAlignment="center"
                        android:textColor="#C1090707"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/text_me_one"
                        android:text="3 años "
                        android:textAlignment="center" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="225dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:layout_width="171dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="match_parent"
                        android:layout_height="142dp"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@mipmap/hamster" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/viga"
                        android:text="Paquita"
                        android:textAlignment="center"
                        android:textColor="#C1090707"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/text_me_one"
                        android:text="1 año"
                        android:textAlignment="center" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/fabMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            app:menu_colorNormal="#8881F6"
            android:layout_alignParentBottom="true">

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="Mensaje"
                app:fab_colorNormal="#8881F6"
                android:src="@mipmap/mensaje" />

            <com.github.clans.fab.FloatingActionButton
                android:onClick="Llamar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:fab_colorNormal="#8881F6"
                android:src="@mipmap/llamar2" />

            <com.github.clans.fab.FloatingActionButton
                android:onClick="Whatsapp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:fab_colorNormal="#8881F6"
                android:src="@mipmap/whatsapp" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabSalir"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:fab_colorNormal="#8881F6"
                android:src="@mipmap/salida" />

        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>


</LinearLayout>