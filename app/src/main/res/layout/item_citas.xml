<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#8881F6"
        app:cardCornerRadius="50dp"
        app:cardElevation="30dp">

        <TextView
            android:id="@+id/tvnombremascotarv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo_bhai"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvtipocitarv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/advent_pro_medium"
                android:textAlignment="center"
                android:textColor="#070212" />

            <TextView
                android:id="@+id/tvveterinariorv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/advent_pro_medium"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvfechacitarv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/advent_pro_medium"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvhoracitarv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/advent_pro_medium"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvdescripcionrv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/advent_pro_medium"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvsederv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/advent_pro_medium"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>